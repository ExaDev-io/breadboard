{
  "plugins": [
    "eslint-plugin-expect-type",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "typescript": true
    }
  },
  "extends": [
    "plugin:expect-type/recommended",
    "plugin:import/typescript"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "rules": {
    "@typescript-eslint/ban-types": [
      "warn",
      {
        "types": {
          "Function": false
        },
        "extendDefaults": true
      }
    ],
    "import/no-cycle": [
      "error",
      {
        "maxDepth": 10
      }
    ]
  }
}
