{
  "emulators": {
    "functions": {
      "port": 5001
    },
    "singleProjectMode": true,
    "ui": {
      "enabled": true
    }
  },
  "functions": [
    {
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "source": "functions"
    }
  ],
  "hosting": {
    "ignore": [
      "**",
      "public",
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "public": "public",
    "rewrites": [
      {
        "function": "app",
        "source": "**"
      }
    ]
  }
}
