{
	"$id": "https://raw.githubusercontent.com/breadboard-ai/breadboard/@google-labs/manifest@0.0.1/packages/manifest/bbm.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$ref": "#/definitions/BreadboardManifest",
	"definitions": {
		"BreadboardManifest": {
			"type": "object",
			"properties": {
				"url": {
					"$ref": "#/definitions/UriReference"
				},
				"title": {
					"type": "string"
				},
				"boards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/BoardResource"
					}
				},
				"manifests": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ManifestResource"
					}
				},
				"$schema": {
					"type": "string"
				}
			},
			"additionalProperties": false,
			"description": "A Breadboard Manifest.\n\nContains a list of paths to board files and a list of paths to manifest files.",
			"examples": [
				{
					"title": "Empty Manifest"
				},
				{
					"title": "Manifest with empty lists",
					"boards": [],
					"manifests": []
				},
				{
					"boards": [
						{
							"title": "My First Board",
							"url": "https://gist.githubusercontent.com/user/SOME_ID/raw/board.bgl.json",
							"version": "1.0.0"
						},
						{
							"title": "My Second Board",
							"url": "./boards/board.bgl.json"
						}
					],
					"manifests": [
						{
							"title": "Gist Manifest",
							"url": "https://gist.githubusercontent.com/user/SOME_ID/raw/manifest.bbm.json"
						}
					]
				},
				{
					"title": "Manifest with concrete boards",
					"boards": [
						{
							"title": "My First Board",
							"nodes": [],
							"edges": []
						}
					]
				}
			]
		},
		"UriReference": {
			"type": "string",
			"format": "uri-reference",
			"examples": [
				"board.bgl.json",
				"manifest.bbm.json",
				"../boards/board.bgl.json",
				"../manifests/manifest.bbm.json",
				"./board.bgl.json",
				"./manifest.bbm.json",
				"https://example.com/board.bgl.json",
				"https://example.com/manifest.bbm.json"
			]
		},
		"BoardResource": {
			"anyOf": [
				{
					"$ref": "#/definitions/ReferencedBoard"
				},
				{
					"$ref": "#/definitions/DereferencedBoard"
				}
			],
			"description": "A board resource. Either referenced or dereferenced.",
			"examples": [
				{
					"nodes": [],
					"edges": []
				},
				{
					"url": "https://breadboard.new/board.bgl.json"
				}
			]
		},
		"ReferencedBoard": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"nodes": {
					"not": {}
				},
				"edges": {
					"not": {}
				},
				"title": {
					"$ref": "#/definitions/Title"
				},
				"url": {
					"$ref": "#/definitions/UriReference"
				}
			},
			"required": [
				"url"
			],
			"description": "A reference to a board resource.",
			"examples": [
				{
					"title": "My Awesom Board",
					"url": "https://breadboard.new/board.bgl.json"
				},
				{
					"url": "board.bgl.json"
				},
				{
					"url": "./boards/board.bgl.json"
				}
			]
		},
		"Title": {
			"type": "string",
			"examples": [
				"My First Board",
				"Gist Manifest"
			]
		},
		"DereferencedBoard": {
			"type": "object",
			"properties": {
				"url": {
					"$ref": "#/definitions/UriReference"
				},
				"title": {
					"$ref": "#/definitions/Title"
				},
				"nodes": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Node"
					}
				},
				"edges": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Edge"
					}
				}
			},
			"required": [
				"nodes",
				"edges"
			],
			"additionalProperties": false,
			"description": "A dereferenced board with nodes and edges.",
			"examples": [
				{
					"nodes": [],
					"edges": []
				}
			]
		},
		"Node": {
			"type": "object",
			"properties": {},
			"description": "Minimal node type"
		},
		"Edge": {
			"type": "object",
			"properties": {},
			"description": "Minimal edge type"
		},
		"ManifestResource": {
			"anyOf": [
				{
					"$ref": "#/definitions/ReferencedManifest"
				},
				{
					"$ref": "#/definitions/DereferencedManifest"
				}
			],
			"description": "A manifest resource. Either referenced or dereferenced."
		},
		"ReferencedManifest": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"url": {
					"$ref": "#/definitions/UriReference"
				},
				"boards": {
					"not": {}
				},
				"manifests": {
					"not": {}
				},
				"title": {
					"$ref": "#/definitions/Title"
				}
			},
			"required": [
				"url"
			],
			"description": "A reference to a manifest.",
			"examples": [
				{
					"title": "Nested Manifest",
					"boards": [],
					"manifests": []
				},
				{
					"url": "https://breadboard.new/manifest.bbm.json"
				}
			]
		},
		"DereferencedManifest": {
			"type": "object",
			"properties": {
				"url": {
					"$ref": "#/definitions/UriReference"
				},
				"title": {
					"$ref": "#/definitions/Title"
				},
				"boards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/BoardResource"
					}
				},
				"manifests": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ManifestResource"
					}
				}
			},
			"additionalProperties": false,
			"description": "A dereferenced manifest with board and manifest resources.",
			"examples": [
				{
					"title": "My Awesome Manifest",
					"boards": [],
					"manifests": []
				},
				{
					"boards": [
						{
							"nodes": [],
							"edges": []
						},
						{
							"url": "https://breadboard.new/board.bgl.json"
						}
					],
					"manifests": [
						{
							"title": "Nested Manifest",
							"boards": [],
							"manifests": []
						},
						{
							"url": "https://breadboard.new/manifest.bbm.json"
						}
					]
				}
			]
		}
	}
}