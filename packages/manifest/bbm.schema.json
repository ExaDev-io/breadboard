{
	"$id": "https://raw.githubusercontent.com/breadboard-ai/breadboard/@google-labs/manifest@0.0.1/packages/manifest/bbm.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$ref": "#/definitions/BreadboardManifest",
	"definitions": {
		"BreadboardManifest": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"boards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/BoardResource"
					}
				},
				"manifests": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ManifestResource"
					}
				},
				"$schema": {
					"type": "string"
				}
			},
			"additionalProperties": false,
			"description": "A Breadboard Manifest.\n\nContains a list of paths to board files and a list of paths to manifest files.",
			"examples": [
				{
					"title": "Empty Manifest"
				},
				{
					"title": "Manifest with empty lists",
					"boards": [],
					"manifests": []
				},
				{
					"boards": [
						{
							"title": "My First Board",
							"url": "https://gist.githubusercontent.com/user/SOME_ID/raw/board.bgl.json",
							"version": "1.0.0"
						},
						{
							"title": "My Second Board",
							"url": "./boards/board.bgl.json"
						}
					],
					"manifests": [
						{
							"title": "Gist Manifest",
							"url": "https://gist.githubusercontent.com/user/SOME_ID/raw/manifest.bbm.json"
						}
					]
				},
				{
					"title": "Manifest with concrete boards",
					"boards": [
						{
							"title": "My First Board",
							"nodes": [],
							"edges": []
						}
					]
				}
			]
		},
		"BoardResource": {
			"anyOf": [
				{
					"$ref": "#/definitions/ReferencedBoard"
				},
				{
					"$ref": "#/definitions/DereferencedBoard"
				}
			]
		},
		"ReferencedBoard": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"nodes": {
					"not": {}
				},
				"edges": {
					"not": {}
				},
				"title": {
					"type": "string"
				},
				"url": {
					"type": "string",
					"format": "uri-reference"
				}
			},
			"required": [
				"url"
			]
		},
		"DereferencedBoard": {
			"type": "object",
			"properties": {
				"url": {
					"not": {}
				},
				"nodes": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Node"
					}
				},
				"edges": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Edge"
					}
				}
			},
			"required": [
				"nodes",
				"edges"
			],
			"additionalProperties": false
		},
		"Node": {
			"type": "object",
			"properties": {}
		},
		"Edge": {
			"type": "object",
			"properties": {}
		},
		"ManifestResource": {
			"anyOf": [
				{
					"$ref": "#/definitions/ReferencedManifest"
				},
				{
					"$ref": "#/definitions/DereferencedManifest"
				}
			]
		},
		"ReferencedManifest": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"boards": {
					"not": {}
				},
				"manifests": {
					"not": {}
				},
				"title": {
					"type": "string"
				},
				"url": {
					"type": "string",
					"format": "uri-reference"
				}
			},
			"required": [
				"url"
			]
		},
		"DereferencedManifest": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"boards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/BoardResource"
					}
				},
				"manifests": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ManifestResource"
					}
				}
			},
			"additionalProperties": false
		}
	}
}