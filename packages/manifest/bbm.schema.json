{
	"$id": "https://raw.githubusercontent.com/breadboard-ai/breadboard/@google-labs/manifest@0.0.1/packages/manifest/bbm.schema.json",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$ref": "#/definitions/BreadboardManifest",
	"definitions": {
		"BreadboardManifest": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"boards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/BoardResource"
					}
				},
				"manifests": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ManifestResource"
					}
				}
			},
			"additionalProperties": false
		},
		"BoardResource": {
			"anyOf": [
				{
					"$ref": "#/definitions/DereferencedBoard"
				},
				{
					"$ref": "#/definitions/ReferencedBoard"
				}
			]
		},
		"DereferencedBoard": {
			"type": "object",
			"properties": {
				"nodes": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Node"
					}
				},
				"edges": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/Edge"
					}
				}
			},
			"required": [
				"edges",
				"nodes"
			]
		},
		"Node": {
			"type": "object",
			"properties": {}
		},
		"Edge": {
			"type": "object",
			"properties": {}
		},
		"ReferencedBoard": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"url": {
					"type": "string",
					"format": "uri-reference"
				}
			},
			"required": [
				"url"
			]
		},
		"ManifestResource": {
			"anyOf": [
				{
					"$ref": "#/definitions/DereferencedManifest"
				},
				{
					"$ref": "#/definitions/ReferencedManifest"
				}
			]
		},
		"DereferencedManifest": {
			"type": "object",
			"properties": {
				"title": {
					"type": "string"
				},
				"boards": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/BoardResource"
					}
				},
				"manifests": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/ManifestResource"
					}
				}
			},
			"additionalProperties": false
		},
		"ReferencedManifest": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"title": {
					"type": "string"
				},
				"url": {
					"type": "string",
					"format": "uri-reference"
				}
			},
			"required": [
				"url"
			]
		}
	}
}