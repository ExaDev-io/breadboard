{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./",
    "target": "ESNext",
    "verbatimModuleSyntax": true
  },
  "extends": "@google-labs/tsconfig/base.json",
  "include": [
    "src/**/*",
    "src/**/*.json",
    "package.json",
    "breadboard.schema.json",
    "__tests__/**/*.ts",
  ]
}
